<body>
  <main>
    <div class="row justify-content-center">
      <div class="col-md-8 offset-md-1">
        <h5 class="m-4 text-black bg-info d-inline-block">注文履歴一覧</h5>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-8 offset-md-1">
        <div class="container">
          <table class="table">
            <tbody>
              <thead>
                <tr class="bg-light">
                  <th>購入日時</th>
                  <th>購入者</th>
                  <th>個数</th>
                  <th>注文ステータス</th>
                </tr>
              </thead>
              <% @orders.each do |order| %>
                <tr>
                  <td>
                    <%= link_to admin_order_path(order.customer_id) , class: 'nav-link text-black' do %>
                    <%= order.created_at%>
                    <% end %>
                  </td>
                  <td><%= order.customer.last_name + order.customer.first_name %></td>
                  <td>
                    <% order.order_details.each do |order_detail| %>
                      <% @total = 0 %>
                      <% @total += order_detail.quantity %>
                      <% end %>
                      <%= @total %>
                  </td>
                  <td><%= order.status_i18n %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>
