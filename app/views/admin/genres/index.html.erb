<body>
  <main>
    <div class="row justify-content-center">
      <div class="col-md-10 offset-md-1">
        <h5 class="m-4 text-black bg-info d-inline-block">ジャンル一覧・追加</h5>
      </div>
    </div>
    
    <div class="row ">
      <div class="col-md-4 offset-md-1">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <td><%= f.label :genre_name, "ジャンル名" %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
          </tbody>
        </table>
        <% end %>
      </div>
    </div>
    
    <div class="container">
      <div class="row position-absolutestart-0 top-50">
        <div class="genre-text col-md-4">
          <table class="table">
            <tbody>
              <thead>
                <tr class="bg-light">
                  <th>ジャンル</th>
                  <th></th>
                </tr>
              </thead>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>




