<div class="row justify-content-center">
  <div class="col-md-8 offset-md-1">
    <h5 class="mt-3 text-black">商品一覧</h5>
    <%= link_to new_admin_item_path , class: 'nav-link text-black float-right' do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9 offset-md-1">
      <table class="table center-block ">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td class="text-success">
              <% if item.is_active == true%>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


