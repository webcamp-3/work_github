<body>
  <main>
    <div class="row justify-content-center">
      <div class="col-md-9 offset-md-1">
        <h5 class="m-4 text-black bg-info d-inline-block">商品一覧</h5>
        <div class="container">
          <table class="table center-block ">
            <tbody>
              <thead>
                <tr>
                  <th>商品ID</th>
                  <th>商品名</th>
                  <th>税抜価格</th>
                  <th>ジャンル</th>
                  <th>ステータス</th>
                </tr>
              </thead>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td>
                    <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                    <% end %>
                  </td>
                  <td><%= item.price %></td>
                  <td><%= item.genre.name %></td>
                  <td>
                    <% if item.is_active == true %>
                      販売中
                    <% else %>
                      販売停止中
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>
