<div class="row justify-content-center">
  <div class="col-lg-5 offset-md-1">
    <h5 class="m-4 text-black">ショッピングカート</h5>
  </div>
  <div class="col-lg-2 offset-md-1 mt-4">
    <%= link_to "カートを空にする", public_cart_items_destroy_all_path, class: "btn btn-sm btn-danger ", method: :delete, "data-confirm" => "Are you sure?" %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <table class="table table-sm">
        <thead class="thead-light">
          <tr>
            <th class="border border-secondary col-lg-4">商品名</th>
            <th class="border border-secondary col-lg-2">単価（税込）</th>
            <th class="border border-secondary col-lg-2">数量</th>
            <th class="border border-secondary col-lg-2">小計</th>
            <th class="border border-secondary col-lg-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="border border-secondary"><%= cart_item.item.name %></td>
            <td class="border border-secondary"><%= cart_item.item.with_tax_price%></td>
            <td class="border border-secondary">
              <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch, local: true do |f| %>
              <%= f.select :amount, *[1..9] %>
              <%= f.submit "変更", class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td class="border border-secondary"><%= cart_item.subtotal%></td>
            <td class="border border-secondary"><%= link_to "削除する", public_cart_item_path(cart_item.id), class: "btn btn-sm btn-danger ", method: :delete, "data-confirm" => "Are you sure?" %></td>
            <% @total +=  cart_item.subtotal %>
          </tr>

          <% end %>
        </tbody>
      </table>

      <table class="table table-sm table-borderless">
        <td><%= link_to "買い物を続ける", public_items_path, class: "btn btn-sm btn-primary"%></td>
        <td></td>
        <td></td>
        <td class="border border-secondary text-center bg-light col-lg-2"><%= label :total_amount, "合計金額" %></td>
        <td class="border border-secondary col-lg-2"><%= @total %></td>
      </table>

      <div class="row justify-content-center">
        <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-sm btn-success"%>
      </div>

    </div>
  </div>
</div>