<div class="row justify-content-center">
  <div class="col-md-10 offset-md-1">
    <h5 class="m-4 text-black bg-info d-inline-block">会員情報編集</h5>
  </div>
</div>

<div class="row">
  <div class="col-md-8 offset-md-1">
    <%= form_with model: @customer, url: public_customers_path do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td><%= f.label :name, "名前" %></td>
          <td>
          <%= f.text_field :last_name, :size=>"20" %>
          <%= f.text_field :first_name, :size=>"20" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :kana_name, "フリガナ" %></td>
          <td>
          <%= f.text_field :last_name_kana, :size=>"20" %>
          <%= f.text_field :first_name_kana, :size=>"20" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, :size=>"20", autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :postal_code, "郵便番号" %></td>
          <td><%= f.text_field :postal_code, :size=>"20" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td><%= f.text_field :address, :size=>"43" %></td>
        </tr>
        <tr>
          <td><%= f.label :telephone_number, "電話番号" %></td>
          <td><%= f.text_field :telephone_number, :size=>"20" %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "編集内容を保存" %>
            <%= link_to public_customers_unsubscribe_path , class: 'btn btn-danger' do %>
              退会する
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
</div>