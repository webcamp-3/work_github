<div class="container m-5">
  <div class="row">
    <div class="col-lg-2">
      <table class="table table-borderless table-sm ">
        <thead class="thead-light">
          <th class="border border-secondary">
            ジャンル検索
          </th>
        </thead>
        <tbody class="border border-secondary">
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-8">
      <div class="container card">
        <%= image_tag 'ケーキ', size: "700x350", class: "card-img" %>
        <p class="card-img-overlay text-center">
          ようこそ、ながのCAKEへ
        </p>
      </div>
      <h3>新着商品</h3>
      <div class="container">
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-3">
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.image, size: "200x150" %>
              <% end %>
              <%= item.name %>
              <%= item.price %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

