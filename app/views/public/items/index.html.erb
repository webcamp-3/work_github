<div class="container m-5">
  <div class="row">
    <div class="col-lg-2">
      <table class="table table-borderless table-sm ">
        <thead class="thead-light">
          <th class="border border-secondary">
            ジャンル検索
          </th>
        </thead>
        <tbody class="border border-secondary">
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-10">
      <div class="container">
        <h3>商品一覧</h3>
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-3">
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.image, size: "200x150" %></br>
              <% end %>
              <%= item.name %></br>
              ¥<%= item.price %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

